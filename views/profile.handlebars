<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Goal:</h3>

    <form class="form new-goal-form">
      <div class="form-group">
        <label for="goal-name">goal name:</label>
        <input class="form-input" type="text" id="goal-name" name="goal-name" />
      </div>

      <div class="form-group">
        {{!-- <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" /> --}}
      </div>

      <div class="form-group">
        <label for="goal-desc">description of goal:</label>
        <textarea class="form-input" id="goal-desc" name="goal-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
 
  {{#if user.goals.length}}
  <div class="col-md-6 goal-list">
    <h3>Current Goals:</h3>

  {{#each user.goals as |goal|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/goal/{{goal.id}}">{{goal.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{goal.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  </div>

</br>


<script src="./js/profile.js"></script>
